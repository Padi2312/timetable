<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorBackgroundFloating">@color/secondaryTextColor</item>
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextInputEditText.OutlinedBox" parent="Base.Widget.MaterialComponents.TextInputEditText" />

    <style name="Custom.Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

</resources>