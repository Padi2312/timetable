<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".general.tabs.todos.TodosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/todosSorting"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondaryLightColor"
            android:popupBackground="@color/primaryDarkColor"
            android:spinnerMode="dropdown"
            tools:listitem="@layout/dropdown_list_item_todos_filter" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/todos_todo_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/todos_floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/todos_empty_todo_list_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tab_todos_empty_todo_list"
        android:textSize="16sp"
        android:visibility="gone">

    </com.google.android.material.textview.MaterialTextView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>